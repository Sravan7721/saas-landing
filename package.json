{
  "name": "saas-landing",
  "version": "1.0.0",
  "description": "SaaS landing page with email verification and MongoDB",
  "main": "server.js",
  "scripts": {
    "build:css": "npx postcss src/styles/tailwind.css -o public/tailwind.css",
    "dev:css": "npx postcss src/styles/tailwind.css -o public/tailwind.css --watch",
    "dev": "concurrently -k \"npm run dev:css\" \"nodemon server.js\"",
    "start": "node server.js"
  },
  "author": "Sravan",
  "license": "MIT",
  "dependencies": {
    "bcrypt": "^6.0.0",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "helmet": "^7.0.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^7.5.0",
    "nodemailer": "^6.9.4"
  },
  "devDependencies": {
    "autoprefixer": "^10.4.14",
    "concurrently": "^8.2.0",
    "nodemon": "^2.0.22",
    "postcss": "^8.4.30",
    "postcss-cli": "^10.1.0",
    "tailwindcss": "3.4.7"
  }
}
